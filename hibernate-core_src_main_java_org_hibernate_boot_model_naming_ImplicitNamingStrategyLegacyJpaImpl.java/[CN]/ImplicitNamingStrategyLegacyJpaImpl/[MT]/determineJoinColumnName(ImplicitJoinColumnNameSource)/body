{
  final String name;
  if (source.getNature() == ImplicitJoinColumnNameSource.Nature.ELEMENT_COLLECTION || source.getAttributePath() == null) {
    name=source.getReferencedTableName().getText() + '_' + source.getReferencedColumnName();
  }
 else {
    name=transformAttributePath(source.getAttributePath()) + '_' + source.getReferencedColumnName();
  }
  return toIdentifier(name,source.getBuildingContext());
}
