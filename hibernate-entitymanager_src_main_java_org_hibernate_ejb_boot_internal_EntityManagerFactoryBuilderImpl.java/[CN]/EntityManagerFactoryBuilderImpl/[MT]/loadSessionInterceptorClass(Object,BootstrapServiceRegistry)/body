{
  if (value == null) {
    return null;
  }
  Class theClass;
  if (Class.class.isInstance(value)) {
    theClass=(Class)value;
  }
 else {
    theClass=bootstrapServiceRegistry.getService(ClassLoaderService.class).classForName(value.toString());
  }
  try {
    return (Class<? extends Interceptor>)theClass;
  }
 catch (  ClassCastException e) {
    throw persistenceException(String.format("Specified Interceptor implementation class [%s] was not castable to Interceptor",theClass.getName()));
  }
}
