{
  final String[] keyCols=StringHelper.qualify(drivingAlias,getSubclassTableKeyColumns(tableNumbers[0]));
  final JoinFragment jf=getFactory().getDialect().createOuterJoinFragment();
  for (int i=1; i < tableNumbers.length; i++) {
    final int j=tableNumbers[i];
    jf.addJoin(getSubclassTableName(j),generateTableAlias(getRootAlias(),j),keyCols,getSubclassTableKeyColumns(j),isInverseSubclassTable(j) || isNullableSubclassTable(j) ? JoinFragment.LEFT_OUTER_JOIN : JoinFragment.INNER_JOIN);
  }
  return jf;
}
