{
  InstrumentationService instrumentationService=session.getFactory().getServiceRegistry().getService(InstrumentationService.class);
  if (instrumentationService.isInstrumented(entity)) {
    FieldInterceptor interceptor=FieldInterceptionHelper.extractFieldInterceptor(entity);
    if (interceptor != null) {
      interceptor.setSession(session);
    }
 else {
      FieldInterceptor fieldInterceptor=FieldInterceptionHelper.injectFieldInterceptor(entity,getEntityName(),null,session);
      fieldInterceptor.dirty();
    }
  }
}
