{
  if (connectionReleaseMode == ConnectionReleaseMode.AFTER_STATEMENT || connectionReleaseMode == ConnectionReleaseMode.AFTER_TRANSACTION) {
    if (jdbcResourceRegistry.hasRegisteredResources()) {
      LOG.forcingContainerResourceCleanup();
      jdbcResourceRegistry.releaseResources();
    }
    aggressiveRelease();
  }
}
