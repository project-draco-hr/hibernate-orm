{
  saveSomeCitizens();
  Session s=openSession();
  Transaction tx=s.beginTransaction();
  State france=(State)s.load(State.class,new Integer(2));
  Criteria criteria=s.createCriteria(Citizen.class);
  criteria.add(Restrictions.naturalId().set("ssn","1234").set("state",france));
  criteria.setCacheable(true);
  Statistics stats=getSessions().getStatistics();
  stats.setStatisticsEnabled(true);
  stats.clear();
  assertEquals("Cache hits should be empty",0,stats.getQueryCacheHitCount());
  List results=criteria.list();
  assertEquals(1,results.size());
  assertEquals("Cache hits should be empty",0,stats.getQueryCacheHitCount());
  assertEquals("First query should be a miss",1,stats.getQueryCacheMissCount());
  assertEquals("Query result should be added to cache",1,stats.getQueryCachePutCount());
  results=criteria.list();
  assertEquals("Cache hits should be empty",1,stats.getQueryCacheHitCount());
  tx.rollback();
  s.close();
}
