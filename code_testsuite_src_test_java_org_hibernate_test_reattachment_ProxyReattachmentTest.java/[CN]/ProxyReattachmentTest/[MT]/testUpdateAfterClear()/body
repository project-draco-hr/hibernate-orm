{
  Session s=openSession();
  s.beginTransaction();
  Parent p=new Parent("p");
  s.save(p);
  s.getTransaction().commit();
  s.close();
  s=openSession();
  s.beginTransaction();
  p=(Parent)s.load(Parent.class,"p");
  s.clear();
  s.update(p);
  s.getTransaction().commit();
  s.close();
  s=openSession();
  s.beginTransaction();
  s.delete(p);
  s.getTransaction().commit();
  s.close();
}
