{
  String sql, sql2;
  if (getDialect() instanceof SQLServerDialect || getDialect() instanceof SybaseASE15Dialect) {
    sql="select t.table_name as {t.tableName}, getdate() as {t.daysOld} from ALL_TABLES t  where t.table_name = 'AUDIT_ACTIONS' ";
