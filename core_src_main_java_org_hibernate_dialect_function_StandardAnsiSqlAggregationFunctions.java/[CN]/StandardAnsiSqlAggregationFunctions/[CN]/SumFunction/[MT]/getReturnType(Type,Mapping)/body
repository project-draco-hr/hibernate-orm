{
  final int jdbcType=determineJdbcTypeCode(firstArgumentType,mapping);
  if (firstArgumentType == Hibernate.BIG_INTEGER) {
    return Hibernate.BIG_INTEGER;
  }
 else   if (firstArgumentType == Hibernate.BIG_DECIMAL) {
    return Hibernate.BIG_DECIMAL;
  }
 else   if (firstArgumentType == Hibernate.LONG || firstArgumentType == Hibernate.SHORT || firstArgumentType == Hibernate.INTEGER) {
    return Hibernate.LONG;
  }
 else   if (firstArgumentType == Hibernate.FLOAT || firstArgumentType == Hibernate.DOUBLE) {
    return Hibernate.DOUBLE;
  }
  if (jdbcType == Types.FLOAT || jdbcType == Types.DOUBLE || jdbcType == Types.DECIMAL || jdbcType == Types.REAL) {
    return Hibernate.DOUBLE;
  }
 else   if (jdbcType == Types.BIGINT || jdbcType == Types.INTEGER || jdbcType == Types.SMALLINT || jdbcType == Types.TINYINT) {
    return Hibernate.LONG;
  }
  return firstArgumentType;
}
