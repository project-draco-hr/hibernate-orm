{
  final PersistenceContext persistenceContext=session.getPersistenceContext();
  CollectionEntry entry=persistenceContext.getCollectionEntry(coll);
  LOG.debug("Found collection with unloaded owner: " + MessageHelper.collectionInfoString(entry.getLoadedPersister(),entry.getLoadedKey(),session.getFactory()));
  entry.setCurrentPersister(entry.getLoadedPersister());
  entry.setCurrentKey(entry.getLoadedKey());
  prepareCollectionForUpdate(coll,entry,session.getEntityMode(),session.getFactory());
}
