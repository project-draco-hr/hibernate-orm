{
  if (identifier == null) {
    return null;
  }
  if (identifier.startsWith("\"") && identifier.endsWith("\"")) {
    return '`' + identifier.substring(1,identifier.length() - 1) + '`';
  }
  if (isUseQuotedIdentifiersGlobally() && !(identifier.startsWith("`") && identifier.endsWith("`"))) {
    return '`' + identifier + '`';
  }
  return identifier;
}
