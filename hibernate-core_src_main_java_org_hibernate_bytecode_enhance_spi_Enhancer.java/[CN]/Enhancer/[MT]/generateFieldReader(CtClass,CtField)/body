{
  try {
    final String name=PERSISTENT_FIELD_READER_PREFIX + persistentField.getName();
    CtMethod reader=CtNewMethod.getter(name,persistentField);
    managedCtClass.addMethod(reader);
    return reader;
  }
 catch (  CannotCompileException e) {
    throw new EnhancementException(String.format("Could not enhance entity class [%s] to add virtual reader method for field [%s]",managedCtClass.getName(),persistentField.getName()),e);
  }
}
