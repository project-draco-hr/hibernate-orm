{
  this.jdbcConnectionAccess=jdbcConnectionAccess;
  this.observer=jdbcSessionContext.getObserver();
  this.resourceRegistry=resourceRegistry;
  this.connectionHandlingMode=determineConnectionHandlingMode(jdbcSessionContext.getPhysicalConnectionHandlingMode(),jdbcConnectionAccess);
  this.sqlExceptionHelper=jdbcSessionContext.getServiceRegistry().getService(JdbcServices.class).getSqlExceptionHelper();
  if (connectionHandlingMode.getAcquisitionMode() == ConnectionAcquisitionMode.IMMEDIATELY) {
    acquireConnectionIfNeeded();
  }
}
