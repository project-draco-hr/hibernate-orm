{
  EntityMetamodel metaModel=factory.getEntityPersister(classUnderTest.getName()).getEntityMetamodel();
  PojoEntityTuplizer tuplizer=(PojoEntityTuplizer)metaModel.getTuplizer(EntityMode.POJO);
  if (AccessType.FIELD.equals(accessType)) {
    assertTrue("Field access was expected.",tuplizer.getGetter(0) instanceof DirectPropertyAccessor.DirectGetter);
  }
 else {
    assertTrue("Property access was expected.",tuplizer.getGetter(0) instanceof BasicPropertyAccessor.BasicGetter);
  }
}
