{
  Ejb3Configuration ejb3Configuration=new Ejb3Configuration();
  if (createSchema()) {
    ejb3Configuration.getHibernateConfiguration().setProperty(Environment.HBM2DDL_AUTO,"create-drop");
  }
  ejb3Configuration.getHibernateConfiguration().setProperty(org.hibernate.cfg.AvailableSettings.USE_NEW_ID_GENERATOR_MAPPINGS,"true").setProperty(AvailableSettings.ENTITY_MANAGER_FACTORY_NAME,"EMF_BaseEntityManagerFunctionalTestCase");
  ejb3Configuration.getHibernateConfiguration().setProperty(Environment.DIALECT,getDialect().getClass().getName());
  return ejb3Configuration;
}
