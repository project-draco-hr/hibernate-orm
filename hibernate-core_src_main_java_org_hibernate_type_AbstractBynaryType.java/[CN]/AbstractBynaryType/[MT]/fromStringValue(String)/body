{
  if (xml == null)   return null;
  if (xml.length() % 2 != 0)   throw new IllegalArgumentException("The string is not a valid xml representation of a binary content.");
  byte[] bytes=new byte[xml.length() / 2];
  for (int i=0; i < bytes.length; i++) {
    String hexStr=xml.substring(i * 2,(i + 1) * 2);
    bytes[i]=(byte)(Integer.parseInt(hexStr,16) + Byte.MIN_VALUE);
  }
  return toExternalFormat(bytes);
}
