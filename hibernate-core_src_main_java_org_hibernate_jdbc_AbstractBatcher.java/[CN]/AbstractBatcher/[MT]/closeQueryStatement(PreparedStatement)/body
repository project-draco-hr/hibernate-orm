{
  try {
    if (ps.getMaxRows() != 0)     ps.setMaxRows(0);
    if (ps.getQueryTimeout() != 0)     ps.setQueryTimeout(0);
  }
 catch (  Exception e) {
    LOG.warn(LOG.unableToClearMaxRowsAndQueryTimeout(),e);
    return;
  }
 finally {
    closeStatement(ps);
  }
  if (lastQuery == ps)   lastQuery=null;
}
