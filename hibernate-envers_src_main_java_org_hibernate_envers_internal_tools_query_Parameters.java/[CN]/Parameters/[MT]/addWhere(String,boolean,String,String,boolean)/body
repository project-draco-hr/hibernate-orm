{
  final StringBuilder expression=new StringBuilder();
  if (addAliasLeft) {
    expression.append(alias).append(".");
  }
  expression.append(left);
  expression.append(" ").append(op).append(" ");
  if (addAliasRight) {
    expression.append(alias).append(".");
  }
  expression.append(right);
  expressions.add(expression.toString());
}
