{
  AnnotationInstance entityAnnotation=JandexHelper.getSingleAnnotation(classInfo,JPADotNames.ENTITY);
  if (entityAnnotation != null) {
    return ConfiguredClassType.ENTITY;
  }
  AnnotationInstance mappedSuperClassAnnotation=JandexHelper.getSingleAnnotation(classInfo,JPADotNames.MAPPED_SUPERCLASS);
  if (mappedSuperClassAnnotation != null) {
    return ConfiguredClassType.MAPPED_SUPERCLASS;
  }
  AnnotationInstance embeddableAnnotation=JandexHelper.getSingleAnnotation(classInfo,JPADotNames.EMBEDDABLE);
  if (embeddableAnnotation != null) {
    return ConfiguredClassType.EMBEDDABLE;
  }
  return ConfiguredClassType.NON_ENTITY;
}
