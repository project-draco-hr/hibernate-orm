{
  if (ConfiguredClassType.MAPPED_SUPERCLASS.equals(getType()) || ConfiguredClassType.EMBEDDABLE.equals(getType())) {
    return false;
  }
  if (InheritanceType.SINGLE_TABLE.equals(inheritanceType)) {
    if (isRoot()) {
      return true;
    }
 else {
      return false;
    }
  }
  return true;
}
