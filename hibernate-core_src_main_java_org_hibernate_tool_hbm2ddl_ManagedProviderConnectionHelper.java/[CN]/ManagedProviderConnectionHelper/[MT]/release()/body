{
  if (connection != null) {
    try {
      JDBCExceptionReporter.logAndClearWarnings(connection);
      connectionProvider.closeConnection(connection);
    }
  finally {
      if (connectionProvider instanceof Stoppable) {
        ((Stoppable)connectionProvider).stop();
      }
      connectionProvider=null;
    }
  }
  connection=null;
}
