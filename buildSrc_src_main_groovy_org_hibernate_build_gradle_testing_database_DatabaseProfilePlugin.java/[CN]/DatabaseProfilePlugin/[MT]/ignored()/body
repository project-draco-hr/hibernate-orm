{
  if (ignored == null) {
    final String values=System.getProperty(HIBERNATE_MATRIX_IGNORE);
    if (values == null || values.length() == 0) {
      ignored=Collections.emptySet();
    }
 else {
      ignored=new HashSet<String>();
      Collections.addAll(ignored,values.split(","));
    }
  }
  return ignored;
}
