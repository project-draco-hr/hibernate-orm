{
  Session s=openSession();
  s.beginTransaction();
  ExceptionCheckingEntity e=new ExceptionCheckingEntity();
  e.setId(new Long(1));
  e.setName("dummy");
  s.update(e);
  try {
    s.flush();
    fail("expection flush failure!");
  }
 catch (  JDBCException ex) {
  }
  s.clear();
  s.getTransaction().commit();
  s.close();
}
