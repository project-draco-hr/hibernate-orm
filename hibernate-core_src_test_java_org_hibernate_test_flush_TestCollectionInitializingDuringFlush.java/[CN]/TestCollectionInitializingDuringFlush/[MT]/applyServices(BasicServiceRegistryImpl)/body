{
  super.applyServices(serviceRegistry);
  serviceRegistry.getService(StandardServiceInitiators.EventListenerRegistrationService.class).attachEventListenerRegistration(new EventListenerRegistration(){
    @Override public void apply(    EventListenerRegistry eventListenerRegistry,    Configuration configuration,    Map<?,?> configValues,    ServiceRegistryImplementor serviceRegistry){
      eventListenerRegistry.getEventListenerGroup(EventType.PRE_UPDATE).appendListener(new InitializingPreUpdateEventListener());
    }
  }
);
}
