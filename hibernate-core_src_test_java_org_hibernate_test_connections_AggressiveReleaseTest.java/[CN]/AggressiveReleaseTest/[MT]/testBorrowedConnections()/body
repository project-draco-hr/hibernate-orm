{
  prepare();
  Session s=getSessionUnderTest();
  Connection conn=s.connection();
  assertFalse(conn.isClosed());
  assertFalse(((SessionImpl)s).getTransactionCoordinator().getJdbcCoordinator().getLogicalConnection().isPhysicallyConnected());
  conn.getCatalog();
  assertTrue(((SessionImpl)s).getTransactionCoordinator().getJdbcCoordinator().getLogicalConnection().isPhysicallyConnected());
  conn.close();
  assertTrue(conn.isClosed());
  assertTrue(((SessionImpl)s).getTransactionCoordinator().getJdbcCoordinator().getLogicalConnection().isPhysicallyConnected());
  release(s);
  done();
}
