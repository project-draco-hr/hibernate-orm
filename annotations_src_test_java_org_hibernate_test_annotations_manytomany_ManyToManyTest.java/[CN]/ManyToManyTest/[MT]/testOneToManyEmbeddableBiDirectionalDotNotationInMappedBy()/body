{
  Session s;
  Transaction tx;
  s=openSession();
  tx=s.beginTransaction();
  Employee e=new Employee();
  JobInfo job=new JobInfo();
  job.setJobDescription("Sushi Chef");
  ProgramManager pm=new ProgramManager();
  Collection<Employee> employees=new ArrayList<Employee>();
  employees.add(e);
  pm.setManages(employees);
  job.setPm(pm);
  e.setJobInfo(job);
  s.persist(e);
  s.flush();
  s.clear();
  tx.commit();
  tx.begin();
  e=(Employee)s.get(e.getClass(),e.getId());
  assertEquals("same job in both directions",e.getJobInfo().getJobDescription(),e.getJobInfo().getPm().getManages().iterator().next().getJobInfo().getJobDescription());
  tx.commit();
  s.close();
}
