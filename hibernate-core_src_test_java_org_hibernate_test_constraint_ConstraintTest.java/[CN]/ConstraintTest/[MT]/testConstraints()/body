{
  Column column=(Column)configuration().getClassMapping(Entity1.class.getName()).getProperty("foo1").getColumnIterator().next();
  assertFalse(column.isNullable());
  assertTrue(column.isUnique());
  column=(Column)configuration().getClassMapping(Entity1.class.getName()).getProperty("foo2").getColumnIterator().next();
  assertTrue(column.isNullable());
  assertTrue(column.isUnique());
  column=(Column)configuration().getClassMapping(Entity1.class.getName()).getProperty("id").getColumnIterator().next();
  assertFalse(column.isNullable());
  assertTrue(column.isUnique());
}
