{
  EntityBinding binding=getEntityBinding(TablePerClassA.class);
  assertEquals("wrong inheritance type",InheritanceType.TABLE_PER_CLASS,binding.getHierarchyDetails().getInheritanceType());
  assertEquals("wrong table name","TableNameTest$TablePerClassA",((org.hibernate.metamodel.relational.Table)binding.getBaseTable()).getTableName().getName());
  binding=getEntityBinding(TablePerClassB.class);
  assertEquals("wrong inheritance type",InheritanceType.TABLE_PER_CLASS,binding.getHierarchyDetails().getInheritanceType());
  assertEquals("wrong table name","TableNameTest$TablePerClassB",((org.hibernate.metamodel.relational.Table)binding.getBaseTable()).getTableName().getName());
}
