{
  if (method.getParameterTypes().length > 0) {
    throw new InvalidMethodForAnnotationException(type.buildTypeMarker() + " callback only valid on no-arg methods : " + Helper.extractMethodName(method));
  }
  if (!method.isAccessible()) {
    try {
      method.setAccessible(true);
    }
 catch (    Exception e) {
      throw new InvalidMethodForAnnotationException(type.buildTypeMarker() + " attached to inaccessible method and unable to make accessible");
    }
  }
}
