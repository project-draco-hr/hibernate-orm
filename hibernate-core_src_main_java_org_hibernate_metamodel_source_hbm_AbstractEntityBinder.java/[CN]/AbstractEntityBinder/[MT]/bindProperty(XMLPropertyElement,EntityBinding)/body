{
  SimpleAttributeBindingState bindingState=new HbmSimpleAttributeBindingState(entityBinding.getEntity().getJavaType().getName(),bindingContext,entityBinding.getMetaAttributeContext(),property);
  ValueRelationalState relationalState=convertToSimpleValueRelationalStateIfPossible(new HbmSimpleValueRelationalStateContainer(bindingContext,true,property));
  entityBinding.getEntity().getOrCreateSingularAttribute(bindingState.getAttributeName());
  return entityBinding.makeSimpleAttributeBinding(bindingState.getAttributeName()).initialize(bindingState).initialize(relationalState);
}
