{
  SimpleAttributeBindingState bindingState=new HbmSimpleAttributeBindingState(entityBinding.getEntity().getPojoEntitySpecifics().getClassName(),getHibernateMappingBinder(),entityBinding.getMetaAttributes(),property);
  ValueRelationalState relationalState=convertToSimpleValueRelationalStateIfPossible(new HbmSimpleValueRelationalStateContainer(getHibernateMappingBinder(),true,property));
  entityBinding.getEntity().getOrCreateSingularAttribute(bindingState.getAttributeName());
  return entityBinding.makeSimpleAttributeBinding(bindingState.getAttributeName()).initialize(bindingState).initialize(relationalState);
}
