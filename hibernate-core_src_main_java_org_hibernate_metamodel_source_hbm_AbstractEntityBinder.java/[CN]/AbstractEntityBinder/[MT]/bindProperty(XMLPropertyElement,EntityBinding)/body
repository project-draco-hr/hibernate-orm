{
  SimpleAttributeBindingState bindingState=new HbmSimpleAttributeBindingState(entityBinding.getEntity().getPojoEntitySpecifics().getClassName(),hibernateMappingBinder,entityBinding.getMetaAttributeContext(),property);
  ValueRelationalState relationalState=convertToSimpleValueRelationalStateIfPossible(new HbmSimpleValueRelationalStateContainer(hibernateMappingBinder,true,property));
  entityBinding.getEntity().getOrCreateSingularAttribute(bindingState.getAttributeName());
  return entityBinding.makeSimpleAttributeBinding(bindingState.getAttributeName()).initialize(bindingState).initialize(relationalState);
}
