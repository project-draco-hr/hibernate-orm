{
  final int dim=sdoGeom.getDimension();
  final Coordinate[] coordinates=new Coordinate[oordinates.length / dim];
  final int zDim=sdoGeom.getZDimension() - 1;
  for (int i=0; i < coordinates.length; i++) {
    if (dim == 2) {
      coordinates[i]=new Coordinate(oordinates[i * dim],oordinates[i * dim + 1]);
    }
 else     if (dim == 3) {
      if (sdoGeom.isLRSGeometry()) {
        throw new UnsupportedOperationException();
      }
 else {
        coordinates[i]=new Coordinate(oordinates[i * dim],oordinates[i * dim + 1],oordinates[i * dim + zDim]);
      }
    }
  }
  return getGeometryFactory().getCoordinateSequenceFactory().create(coordinates);
}
