{
  validateArgs(bean,propertyName);
  Method getter=getMethod(bean,propertyName);
  if (getter != null) {
    try {
      return getter.invoke(bean);
    }
 catch (    Exception e) {
    }
  }
  Field field=getField(bean,propertyName);
  if (field != null) {
    try {
      field.setAccessible(true);
      return field.get(bean);
    }
 catch (    Exception e) {
    }
  }
  return null;
}
