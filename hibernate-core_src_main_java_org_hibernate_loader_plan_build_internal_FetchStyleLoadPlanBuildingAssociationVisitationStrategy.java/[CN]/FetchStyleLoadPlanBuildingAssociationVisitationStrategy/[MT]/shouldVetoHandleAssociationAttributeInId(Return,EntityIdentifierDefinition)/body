{
  if (EntityReturn.class.isInstance(rootReturn)) {
    final EntityIdentifierDefinition rootEntityIdentifierDefinition=((EntityReturn)rootReturn).getEntityPersister().getEntityKeyDefinition();
    if (rootEntityIdentifierDefinition == identifierDefinition) {
      if (rootEntityIdentifierDefinition.isEncapsulated()) {
        final EncapsulatedEntityIdentifierDefinition encapsulated=(EncapsulatedEntityIdentifierDefinition)rootEntityIdentifierDefinition;
        if (encapsulated.getAttributeDefinition().getType().isComponentType()) {
          return true;
        }
      }
 else {
        final NonEncapsulatedEntityIdentifierDefinition nonEncapsulated=(NonEncapsulatedEntityIdentifierDefinition)rootEntityIdentifierDefinition;
        if (nonEncapsulated.getSeparateIdentifierMappingClass() == null) {
          return true;
        }
      }
    }
  }
  return false;
}
