{
  tm.begin();
  try {
    Session session=getSessions().getCurrentSession();
    Contact contact=(Contact)session.get(Contact.class,id);
    return contact;
  }
 catch (  Exception e) {
    log.error("Unable to get contact",e);
    tm.setRollbackOnly();
    throw e;
  }
 finally {
    if (tm.getStatus() == Status.STATUS_ACTIVE)     tm.commit();
 else     tm.rollback();
  }
}
