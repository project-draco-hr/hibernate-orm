{
  tm.begin();
  try {
    Session session=sessionFactory().getCurrentSession();
    return (Contact)session.get(Contact.class,id);
  }
 catch (  Exception e) {
    tm.setRollbackOnly();
    throw e;
  }
 finally {
    if (tm.getStatus() == Status.STATUS_ACTIVE) {
      tm.commit();
    }
 else {
      tm.rollback();
    }
  }
}
