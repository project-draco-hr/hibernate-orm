{
  String selectHQL="select contact.id from Contact contact";
  selectHQL+=" where contact.customer.name = :cName";
  tm.begin();
  try {
    Session session=sessionFactory().getCurrentSession();
    return session.createQuery(selectHQL).setFlushMode(FlushMode.AUTO).setParameter("cName",customerName).list();
  }
 catch (  Exception e) {
    tm.setRollbackOnly();
    throw e;
  }
 finally {
    if (tm.getStatus() == Status.STATUS_ACTIVE) {
      tm.commit();
    }
 else {
      tm.rollback();
    }
  }
}
