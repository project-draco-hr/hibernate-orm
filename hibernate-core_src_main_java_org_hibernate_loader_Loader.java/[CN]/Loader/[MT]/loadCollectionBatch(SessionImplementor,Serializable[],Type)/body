{
  if (LOG.isDebugEnabled())   LOG.batchLoadingCollection(MessageHelper.collectionInfoString(getCollectionPersisters()[0],ids,getFactory()));
  Type[] idTypes=new Type[ids.length];
  Arrays.fill(idTypes,type);
  try {
    doQueryAndInitializeNonLazyCollections(session,new QueryParameters(idTypes,ids,ids),true);
  }
 catch (  SQLException sqle) {
    throw factory.getSQLExceptionHelper().convert(sqle,"could not initialize a collection batch: " + MessageHelper.collectionInfoString(getCollectionPersisters()[0],ids,getFactory()),getSQLString());
  }
  LOG.batchLoadingCollectionDone();
}
