{
  runMethod=findTestMethod();
  setRunTestFlag(runMethod);
  if (runTest) {
    if (getSessions() == null || lastTestClass != getClass()) {
      buildSessionFactory(getMappings(),getAnnotatedPackages(),getXmlFiles());
      lastTestClass=getClass();
    }
 else {
      runSchemaGeneration();
    }
  }
}
