{
  try {
    file.createNewFile();
  }
 catch (  Exception e) {
    log.debug("Exception calling File#createNewFile : " + e.toString());
  }
  try {
    return new FileWriter(file);
  }
 catch (  IOException e) {
    throw new PersistenceException("Unable to open specified script target file for writing : " + file,e);
  }
}
