{
  StringBuilder result=new StringBuilder(60).append("\n    ");
  StringTokenizer tokens=new StringTokenizer(sql," '[]\"",true);
  boolean quoted=false;
  while (tokens.hasMoreTokens()) {
    String token=tokens.nextToken();
    result.append(token);
    if (isQuote(token)) {
      quoted=!quoted;
    }
 else     if (!quoted) {
      if ("is".equals(token)) {
        result.append("\n       ");
      }
    }
  }
  return result.toString();
}
