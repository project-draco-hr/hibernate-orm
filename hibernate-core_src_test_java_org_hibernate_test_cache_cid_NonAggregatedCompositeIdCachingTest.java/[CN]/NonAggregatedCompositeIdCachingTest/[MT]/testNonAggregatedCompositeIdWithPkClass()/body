{
  StandardServiceRegistry ssr=new StandardServiceRegistryBuilder().build();
  try {
    new MetadataSources(ssr).addAnnotatedClass(ItWithPkClass.class).getMetadataBuilder().applySharedCacheMode(SharedCacheMode.ENABLE_SELECTIVE).build().buildSessionFactory();
  }
  finally {
    StandardServiceRegistryBuilder.destroy(ssr);
  }
}
