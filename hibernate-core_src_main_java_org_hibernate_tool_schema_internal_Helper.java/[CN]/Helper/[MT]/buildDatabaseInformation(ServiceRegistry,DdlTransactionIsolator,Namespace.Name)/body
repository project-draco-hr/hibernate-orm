{
  final JdbcEnvironment jdbcEnvironment=serviceRegistry.getService(JdbcEnvironment.class);
  try {
    return new ImprovedDatabaseInformationImpl(serviceRegistry,jdbcEnvironment,ddlTransactionIsolator,defaultNamespace);
  }
 catch (  SQLException e) {
    throw jdbcEnvironment.getSqlExceptionHelper().convert(e,"Unable to build DatabaseInformation");
  }
}
