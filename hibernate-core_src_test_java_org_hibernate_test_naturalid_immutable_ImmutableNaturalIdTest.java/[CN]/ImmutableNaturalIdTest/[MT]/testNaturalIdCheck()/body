{
  Session s=openSession();
  Transaction t=s.beginTransaction();
  User u=new User("steve","superSecret");
  s.persist(u);
  u.setUserName("Steve");
  try {
    s.flush();
    fail();
  }
 catch (  PersistenceException e) {
    t.rollback();
  }
  u.setUserName("steve");
  s.delete(u);
  s.close();
}
