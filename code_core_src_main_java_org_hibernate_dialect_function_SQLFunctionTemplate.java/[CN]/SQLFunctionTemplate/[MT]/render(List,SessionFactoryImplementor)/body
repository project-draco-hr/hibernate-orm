{
  StringBuffer buf=new StringBuffer();
  for (int i=0; i < chunks.length; ++i) {
    if (i < paramIndexes.length) {
      Object arg=paramIndexes[i] < args.size() ? args.get(paramIndexes[i]) : null;
      if (arg != null) {
        buf.append(chunks[i]).append(arg);
      }
    }
 else {
      buf.append(chunks[i]);
    }
  }
  return buf.toString();
}
