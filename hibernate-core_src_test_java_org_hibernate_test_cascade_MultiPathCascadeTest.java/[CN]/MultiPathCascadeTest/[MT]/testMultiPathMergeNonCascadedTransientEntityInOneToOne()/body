{
  Session s=openSession();
  s.beginTransaction();
  A a=new A();
  a.setData("Anna");
  s.save(a);
  s.getTransaction().commit();
  s.close();
  modifyEntity(a);
  s=openSession();
  s.beginTransaction();
  a=(A)s.merge(a);
  s.getTransaction().commit();
  s.close();
  verifyModifications(a.getId());
  G g=a.getG();
  a.setG(null);
  A aNew=new A();
  aNew.setData("Alice");
  g.setA(aNew);
  aNew.setG(g);
  s=openSession();
  s.beginTransaction();
  try {
    s.merge(a);
    s.merge(g);
    s.getTransaction().commit();
    fail("should have thrown TransientObjectException");
  }
 catch (  TransactionException e) {
    assertTrue(e.getCause() instanceof TransientObjectException);
  }
 finally {
    s.getTransaction().rollback();
  }
  s.close();
}
