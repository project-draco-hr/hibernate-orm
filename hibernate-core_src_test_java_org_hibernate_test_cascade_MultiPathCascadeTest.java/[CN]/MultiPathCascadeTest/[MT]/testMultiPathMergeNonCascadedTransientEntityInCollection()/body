{
  Session s=openSession();
  s.beginTransaction();
  A a=new A();
  a.setData("Anna");
  s.save(a);
  s.getTransaction().commit();
  s.close();
  modifyEntity(a);
  s=openSession();
  s.beginTransaction();
  a=(A)s.merge(a);
  s.getTransaction().commit();
  s.close();
  verifyModifications(a.getId());
  assertEquals(1,a.getHs().size());
  H h=(H)a.getHs().iterator().next();
  G gNew=new G();
  gNew.setData("Gail");
  gNew.getHs().add(h);
  h.getGs().add(gNew);
  s=openSession();
  s.beginTransaction();
  try {
    s.merge(a);
    s.merge(h);
    s.getTransaction().commit();
    fail("should have thrown TransientObjectException");
  }
 catch (  TransientObjectException expected) {
  }
 finally {
    s.getTransaction().rollback();
  }
  s.close();
}
