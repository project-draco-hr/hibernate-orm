{
  String className=ConfigurationHelper.getString(Environment.QUERY_TRANSLATOR,properties,"org.hibernate.hql.ast.ASTQueryTranslatorFactory");
  log.info("Query translator: " + className);
  try {
    return (QueryTranslatorFactory)ReflectHelper.classForName(className).newInstance();
  }
 catch (  Exception cnfe) {
    throw new HibernateException("could not instantiate QueryTranslatorFactory: " + className,cnfe);
  }
}
