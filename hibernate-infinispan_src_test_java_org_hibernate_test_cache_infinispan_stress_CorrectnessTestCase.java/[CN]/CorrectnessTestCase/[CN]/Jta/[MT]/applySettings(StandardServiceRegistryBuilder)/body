{
  ssrb.applySetting(Environment.JTA_PLATFORM,TestingJtaPlatformImpl.class.getName()).applySetting(Environment.CONNECTION_PROVIDER,JtaAwareConnectionProviderImpl.class.getName()).applySetting(Environment.TRANSACTION_COORDINATOR_STRATEGY,JtaTransactionCoordinatorBuilderImpl.class.getName()).applySetting(TestInfinispanRegionFactory.TRANSACTIONAL,transactional);
  if (readOnly) {
    ssrb.applySetting(Environment.DEFAULT_CACHE_CONCURRENCY_STRATEGY,CacheConcurrencyStrategy.READ_ONLY.toAccessType().getExternalName());
  }
}
