{
  if (elementXClass != null) {
    try {
      return getMappings().getReflectionManager().toClass(elementXClass);
    }
 catch (    Exception e) {
      log.debugf("Unable to resolve XClass [%s] to Class for collection elements [%s]",elementXClass.getName(),collection.getRole());
    }
  }
  if (collection.getElement() != null) {
    if (collection.getElement().getType() != null) {
      return collection.getElement().getType().getReturnedClass();
    }
  }
  log.debugf("Unable to resolve element information for collection [%s]",collection.getRole());
  return null;
}
