{
  final String fetchSelection=manyToOneElement.getFetch() != null ? manyToOneElement.getFetch().value() : null;
  final String lazySelection=manyToOneElement.getLazy() != null ? manyToOneElement.getLazy().value() : null;
  final String outerJoinSelection=manyToOneElement.getOuterJoin() != null ? manyToOneElement.getOuterJoin().value() : null;
  if (lazySelection == null) {
    if ("join".equals(fetchSelection) || "true".equals(outerJoinSelection)) {
      return FetchTiming.IMMEDIATE;
    }
 else     if ("false".equals(outerJoinSelection)) {
      return FetchTiming.DELAYED;
    }
 else {
      return bindingContext.getMappingDefaults().areAssociationsLazy() ? FetchTiming.DELAYED : FetchTiming.IMMEDIATE;
    }
  }
 else   if ("extra".equals(lazySelection)) {
    return FetchTiming.EXTRA_LAZY;
  }
 else   if ("true".equals(lazySelection)) {
    return FetchTiming.DELAYED;
  }
 else   if ("false".equals(lazySelection)) {
    return FetchTiming.IMMEDIATE;
  }
  throw new MappingException(String.format("Unexpected lazy selection [%s] on '%s'",lazySelection,manyToOneElement.getName()),bindingContext.getOrigin());
}
