{
  if (log.isTraceEnabled()) {
    log.trace("Invalidate region: " + name);
  }
  Transaction tx=getCurrentTransaction();
  if (tx != null) {
synchronized (invalidationMutex) {
      invalidateTransaction=tx;
      invalidateState.set(InvalidateState.INVALID);
    }
  }
 else {
    invalidateState.set(InvalidateState.INVALID);
  }
}
