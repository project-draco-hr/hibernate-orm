{
  final Property identifierProperty=persistentClass.getIdentifierProperty();
  @SuppressWarnings("unchecked") Class<A> idClass=identifierProperty.getType().getReturnedClass();
  final Type<A> attrType=new BasicTypeImpl<A>(idClass,identifierProperty.isComposite() ? PersistenceType.EMBEDDABLE : PersistenceType.BASIC);
  return SingularAttributeImpl.create(this,attrType).property(identifierProperty).id().build();
}
