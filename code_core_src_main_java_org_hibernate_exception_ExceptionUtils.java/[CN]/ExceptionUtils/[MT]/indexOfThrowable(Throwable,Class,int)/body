{
  if (throwable == null) {
    return -1;
  }
  if (fromIndex < 0) {
    fromIndex=0;
  }
  Throwable[] throwables=ExceptionUtils.getThrowables(throwable);
  if (fromIndex >= throwables.length) {
    return -1;
  }
  for (int i=fromIndex; i < throwables.length; i++) {
    if (throwables[i].getClass().equals(type)) {
      return i;
    }
  }
  return -1;
}
