{
  SimpleJtaTransactionManagerImpl.getInstance().begin();
  Session s=openSession();
  Node node=new Node("test");
  s.persist(node);
  SimpleJtaTransactionManagerImpl.getInstance().commit();
  clearCounts();
  SimpleJtaTransactionManagerImpl.getInstance().begin();
  s=openSession();
  s=applyNonFlushedChangesToNewSessionCloseOldSession(s);
  s.delete(node);
  s=applyNonFlushedChangesToNewSessionCloseOldSession(s);
  SimpleJtaTransactionManagerImpl.getInstance().commit();
  assertUpdateCount(0);
  assertInsertCount(0);
}
