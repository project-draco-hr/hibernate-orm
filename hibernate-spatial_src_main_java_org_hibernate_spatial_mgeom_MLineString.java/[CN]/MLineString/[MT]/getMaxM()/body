{
  if (this.isEmpty()) {
    return Double.NaN;
  }
 else {
    double[] measures=this.getMeasures();
    if (this.getMeasureDirection() == MGeometry.INCREASING) {
      return measures[measures.length - 1];
    }
 else     if (this.getMeasureDirection() == MGeometry.DECREASING || this.getMeasureDirection() == MGeometry.CONSTANT) {
      return measures[0];
    }
 else {
      double ma=Double.NEGATIVE_INFINITY;
      for (int i=0; i < measures.length; i++) {
        if (ma < measures[i]) {
          ma=measures[i];
        }
      }
      return ma;
    }
  }
}
