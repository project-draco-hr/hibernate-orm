{
  if (this.isEmpty()) {
    return Double.NaN;
  }
 else {
    double[] a=this.getMeasures();
    if (this.getMeasureDirection() == MGeometry.INCREASING) {
      return a[0];
    }
 else     if (this.getMeasureDirection() == MGeometry.DECREASING || this.getMeasureDirection() == MGeometry.CONSTANT) {
      return a[a.length - 1];
    }
 else {
      double ma=Double.POSITIVE_INFINITY;
      for (int i=0; i < a.length; i++) {
        if (ma > a[i]) {
          ma=a[i];
        }
      }
      return ma;
    }
  }
}
