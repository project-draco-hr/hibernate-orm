{
  final String sql=determineSql(timeout);
  SessionFactoryImplementor factory=session.getFactory();
  try {
    PreparedStatement st=session.getBatcher().prepareSelectStatement(sql);
    try {
      getLockable().getIdentifierType().nullSafeSet(st,id,1,session);
      if (getLockable().isVersioned()) {
        getLockable().getVersionType().nullSafeSet(st,version,getLockable().getIdentifierType().getColumnSpan(factory) + 1,session);
      }
      ResultSet rs=st.executeQuery();
      try {
        if (!rs.next()) {
          if (factory.getStatistics().isStatisticsEnabled()) {
            factory.getStatisticsImplementor().optimisticFailure(getLockable().getEntityName());
          }
          throw new StaleObjectStateException(getLockable().getEntityName(),id);
        }
      }
  finally {
        rs.close();
      }
    }
  finally {
      session.getBatcher().closeStatement(st);
    }
  }
 catch (  SQLException sqle) {
    JDBCException e=JDBCExceptionHelper.convert(session.getFactory().getSQLExceptionConverter(),sqle,"could not lock: " + MessageHelper.infoString(getLockable(),id,session.getFactory()),sql);
    throw new PessimisticLockException("could not obtain pessimistic lock",e,object);
  }
}
