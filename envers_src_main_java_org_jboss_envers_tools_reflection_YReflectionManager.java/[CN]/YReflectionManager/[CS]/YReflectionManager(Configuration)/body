{
  Object delegateTemp;
  try {
    delegateTemp=cfg.getClass().getMethod("getReflectionManager").invoke(cfg);
  }
 catch (  NoSuchMethodException e) {
    delegateTemp=ReflectionTools.loadClass("org.hibernate.cfg.annotations.reflection.EJB3ReflectionManager").newInstance();
  }
  delegate=delegateTemp;
  ymc=new YMethodsAndClasses(delegate.getClass());
}
