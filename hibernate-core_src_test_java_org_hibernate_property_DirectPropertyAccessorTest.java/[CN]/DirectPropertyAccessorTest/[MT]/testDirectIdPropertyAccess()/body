{
  Session s=openSession();
  final Transaction transaction=s.beginTransaction();
  Item i=new Item();
  s.persist(i);
  Order o=new Order();
  o.setOrderNumber(1);
  o.getItems().add(i);
  s.persist(o);
  transaction.commit();
  s.clear();
  o=(Order)s.load(Order.class,1);
  assertFalse(Hibernate.isInitialized(o));
  o.getOrderNumber();
  assertFalse(Hibernate.isInitialized(o));
  s.close();
}
