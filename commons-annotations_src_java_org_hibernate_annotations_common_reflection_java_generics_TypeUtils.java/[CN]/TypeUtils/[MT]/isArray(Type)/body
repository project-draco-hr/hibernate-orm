{
  return new TypeSwitch<Boolean>(){
    @Override public Boolean caseClass(    Class clazz){
      return clazz.isArray();
    }
    @Override public Boolean caseGenericArrayType(    GenericArrayType genericArrayType){
      return isSimple(genericArrayType.getGenericComponentType());
    }
    @Override public Boolean defaultCase(    Type type){
      return false;
    }
  }
.doSwitch(t);
}
