{
  if (relation.isAudited()) {
    return versionsReader.createQuery().forEntitiesAtRevision(relation.getReferencedEntityClass(),relation.getReferencedEntityName(),revision).add(AuditEntity.id().eq(primaryKey)).getSingleResult();
  }
 else {
    return createNotAuditedEntityReference(versionsReader,relation.getReferencedEntityClass(),relation.getReferencedEntityName(),primaryKey);
  }
}
