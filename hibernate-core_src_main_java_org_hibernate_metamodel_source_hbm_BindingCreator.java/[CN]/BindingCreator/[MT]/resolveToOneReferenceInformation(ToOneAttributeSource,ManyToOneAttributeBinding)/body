{
  final String referencedEntityName=attributeSource.getReferencedEntityName() != null ? attributeSource.getReferencedEntityName() : attributeBinding.getAttribute().getSingularAttributeType().getClassName();
  attributeBinding.setReferencedEntity(referencedEntityName);
  attributeBinding.setReferencedEntityAttributeName(attributeSource.getReferencedEntityAttributeName());
}
