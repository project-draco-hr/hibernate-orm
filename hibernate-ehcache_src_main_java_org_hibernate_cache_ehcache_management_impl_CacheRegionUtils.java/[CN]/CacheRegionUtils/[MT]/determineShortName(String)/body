{
  String result=fullName;
  if (fullName != null) {
    String[] comps=fullName.split("\\.");
    if (comps.length == 1) {
      return fullName;
    }
    boolean truncate=true;
    for (int i=0; i < comps.length; i++) {
      String comp=comps[i];
      char c=comp.charAt(0);
      if (truncate && Character.isUpperCase(c)) {
        truncate=false;
      }
      if (truncate) {
        comps[i]=Character.toString(c);
      }
    }
    result=join(comps,'.');
  }
  return result;
}
