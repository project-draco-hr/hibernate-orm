{
  Configuration cfg=new Configuration();
  cfg.addAnnotatedClass(Entity1.class);
  cfg.addAnnotatedClass(Entity2.class);
  cfg.buildMappings();
  org.hibernate.mapping.Table entity1Table=cfg.getClassMapping(Entity1.class.getName()).getTable();
  org.hibernate.mapping.Table entity2Table=cfg.getClassMapping(Entity2.class.getName()).getTable();
  assertTrue(entity1Table.getName().equals(entity2Table.getName()));
  assertFalse(entity1Table.getSchema().equals(entity2Table.getSchema()));
}
