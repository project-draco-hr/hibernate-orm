{
  Session s=openSession();
  Transaction tx=s.beginTransaction();
  final Person person=new Person();
  s.persist(person);
  tx.commit();
  s.close();
  assertTrue(person.getId() == 10);
  s=openSession();
  tx=s.beginTransaction();
  s.createQuery("delete from Person").executeUpdate();
  tx.commit();
  s.close();
}
