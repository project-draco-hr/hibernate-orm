{
  ClassInfo rootEntity=info;
  DotName superName=info.superName();
  ClassInfo tmpInfo;
  while (!OBJECT.equals(superName)) {
    tmpInfo=index.getClassByName(superName);
    if (isEntityClass(tmpInfo)) {
      rootEntity=tmpInfo;
    }
    superName=tmpInfo.superName();
  }
  return rootEntity;
}
