{
  try {
    BufferedReader input=new BufferedReader(new FileReader(file));
    String line;
    while ((line=input.readLine()) != null) {
      final String trimmedLine=line.trim();
      if (trimmedLine.contains(text)) {
        return;
      }
    }
  }
 catch (  IOException e) {
    fail(String.format("Failed due to IOException checking file [%s] for a line containing: [%s]",file.getName(),text));
  }
  fail(String.format("File [%s] does not contain a line containing: [%s]",file.getName(),text));
}
