{
  super.configure(cfg);
  cfg.setProperty("javax.persistence.validation.group.pre-persist","");
  cfg.setProperty("javax.persistence.validation.group.pre-update","");
  cfg.setProperty("javax.persistence.validation.group.pre-remove",Default.class.getName() + ", " + Strict.class.getName());
  cfg.setProperty("hibernate.validator.apply_to_ddl","false");
}
