{
  Session s1=sessionFactory().openSession();
  s1.beginTransaction();
  try {
    A it=(A)s1.createQuery("from A a").setLockMode("a",LockMode.PESSIMISTIC_WRITE).uniqueResult();
    assertNotNull(it);
    nowAttemptToUpdateRow();
  }
  finally {
    s1.getTransaction().commit();
    s1.close();
  }
}
